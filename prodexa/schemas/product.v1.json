{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Product",
    "type": "object",
    "additionalProperties": false,
    "required": ["title", "price", "currency", "url"],
    "properties": {
      "url": {
        "type": "string",
        "format": "uri"
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "brand": {
        "type": ["string", "null"]
      },
      "price": {
        "type": "number",
        "minimum": 0
      },
      "currency": {
        "type": "string",
        "minLength": 3,
        "maxLength": 3
      },
      "availability": {
        "type": ["string", "null"],
        "enum": ["in_stock", "out_of_stock", "preorder", null]
      },
      "rating": {
        "type": ["number", "null"],
        "minimum": 0,
        "maximum": 5
      },
      "reviews_count": {
        "type": ["integer", "null"],
        "minimum": 0
      },
      "images": {
        "type": "array",
        "items": { "type": "string", "format": "uri" }
      },
      "description": {
        "type": ["string", "null"]
      },
      "features": {
        "type": "array",
        "items": { "type": "string" }
      },
      "sku": {
        "type": ["string", "null"]
      }
    }
  }