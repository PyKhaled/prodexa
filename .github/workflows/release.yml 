name: Build & Release Prodexa

on:
  push:
    tags:
      - "v*.*.*"     # v0.1.0, v1.2.3, etc.

permissions:
  contents: write

jobs:
  build:
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]

    runs-on: ${{ matrix.os }}

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pyinstaller
          pip install -e .

      - name: Run tests
        run: |
          python -m unittest discover tests

      - name: Build binary (Linux)
        if: runner.os == 'Linux'
        run: |
          pyinstaller \
            --name Prodexa \
            --onefile \
            prodexa/__main__.py

      - name: Build binary (Windows)
        if: runner.os == 'Windows'
        run: |
          pyinstaller \
            --name Prodexa \
            --onefile \
            --windowed \
            --icon prodexa/assets/icons/app.ico \
            prodexa/__main__.py

      - name: Build app (macOS)
        if: runner.os == 'macOS'
        run: |
          pyinstaller \
            --name Prodexa \
            --windowed \
            --icon prodexa/assets/icons/app.icns \
            prodexa/__main__.py

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: prodexa-${{ runner.os }}
          path: dist/*

  release:
    needs: build
    runs-on: ubuntu-latest

    steps:
    - name: Download artifacts
        uses: actions/download-artifact@v4
        with:
        path: artifacts

    - name: Create GitHub Release
        uses: softprops/action-gh-release@v2
        with:
        files: artifacts/**/*
